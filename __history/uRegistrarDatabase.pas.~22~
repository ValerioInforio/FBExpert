unit uRegistrarDatabase;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Mask, Vcl.DBCtrls,
  Data.DB, Vcl.ExtCtrls, Vcl.Buttons;

type
  TfrmRegistrarDatabase = class(TForm)
    Panel1: TPanel;
    Label2: TLabel;
    DBEPROTOCOL: TDBEdit;
    Label3: TLabel;
    DBESERVER: TDBEdit;
    Label4: TLabel;
    DBEPORT: TDBEdit;
    Label5: TLabel;
    DBEDATABASE: TDBEdit;
    Label6: TLabel;
    DBEALIAS: TDBEdit;
    Label7: TLabel;
    DBEUSER_NAME: TDBEdit;
    Label8: TLabel;
    DBEPASSWORD: TDBEdit;
    Label9: TLabel;
    DBEDRIVER_ID: TDBEdit;
    BTNSalvar: TBitBtn;
    BTNSair: TBitBtn;
    DSDatabases: TDataSource;
    procedure BTNSairClick(Sender: TObject);
  private
    vAlias : String;
    { Private declarations }
  public
    constructor Create(AOwner : TComponent; pAlias : String);
    { Public declarations }
  end;

var
  frmRegistrarDatabase: TfrmRegistrarDatabase;

implementation

{$R *.dfm}

uses uDMFBExpert;

procedure TfrmRegistrarDatabase.BTNSairClick(Sender: TObject);
begin
  Close();
end;

Constructor TfrmRegistrarDatabase.Create(AOwner : TComponent; pAlias : String);
begin
  inherited Create(AOwner);
  vAlias := pAlias;

  if not vAlias.Trim().Equals('') then
     begin
       DSDatabases.DataSet := dmFBExpert.GetDatabase(vAlias.Trim());
     end;
end;


end.
